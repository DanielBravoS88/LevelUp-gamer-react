              "raw": "{\n  \"rol\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/:id/rol",
              "host": ["{{base_url}}"],
              "path": ["users", ":id", "rol"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID del usuario a promover"
                }
              ]
            }
          }
        },
        {
          "name": "Degradar Admin a Usuario",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"

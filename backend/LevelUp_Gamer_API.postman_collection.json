              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rol\": \"usuario\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/:id/rol",
              "host": ["{{base_url}}"],
              "path": ["users", ":id", "rol"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID del admin a degradar"
                }
              ]
            }
          }
        },
        {
          "name": "Eliminar Usuario",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/:id",
              "host": ["{{base_url}}"],
              "path": ["users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID del usuario a eliminar"
                }
              ]
            }
          }
        }
      ]
